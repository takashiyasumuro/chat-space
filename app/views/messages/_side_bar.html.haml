.Side-bar
  .Side-bar__header
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog')
  .Side-bar__groups
    - current_user.groups.each do |group|
      .side-box
        = link_to group_messages_path(group) do
          .side-title
            = group.name
          .side-message
            = group.show_last_message